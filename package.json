{
    "name": "dnr-service",
    "version": "1.0.0",
    "description": "Backend Service for DNR",
    "main": "index.js",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "start": "node ./dist/src/server.js",
        "dev": "tsc-watch --onSuccess \"node -r dotenv/config ./dist/src/server.js\"",
        "start:dev": "tsc-watch --onSuccess \"node -r dotenv/config ./dist/src/server.js\"",
        "start-sync-product": "ts-node -r dotenv/config src/scripts/sync-products.ts",
        "start-expire-order-cron": "ts-node -r dotenv/config src/scripts/expire-order.ts",
        "start-complete-order-cron": "ts-node -r dotenv/config src/scripts/complete-order.ts",
        "start-flash-sale-cron": "ts-node -r dotenv/config src/scripts/flash-sale-cron.ts",
        "start-expired-product-discount-cron": "ts-node -r dotenv/config src/scripts/expire-discount.ts",
        "lint": "eslint --ignore-path .eslintignore --ext .ts,.js .",
        "lint:fix": "eslint --ignore-path .eslintignore --ext .ts,.js --fix .",
        "test": "cross-env NODE_ENV=test jest --verbose --runInBand --collectCoverage=true ./tests",
        "build": "rm -rf dist && tsc",
        "migration:create": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js --config src/libs/database/ormconfig-cli.ts migration:create",
        "migration:generate": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js --config src/libs/database/ormconfig-cli.ts migration:generate",
        "migration:run": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js --config src/libs/database/ormconfig-cli.ts migration:run",
        "migration:revert": "ts-node -r ./src/module-alias.ts ./node_modules/typeorm/cli.js --config src/libs/database/ormconfig-cli.ts migration:revert",
        "format": "prettier --config .prettierrc.js --write './**/*.{js,ts,json,yml,yaml}'",
        "format:check": "prettier --config .prettierrc.js --check './**/*.{js,ts,json,yml,yaml}'",
        "generate-error-map": "ts-node src/cmd/generate-error-map generate"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/semmiverian/dnr-service.git"
    },
    "dependencies": {
        "@sendgrid/mail": "^7.4.7",
        "@sentry/node": "^6.15.0",
        "@sentry/tracing": "^6.15.0",
        "axios": "~0.21.4",
        "bcrypt": "~5.0.1",
        "class-validator": "~0.13.1",
        "cors": "^2.8.5",
        "date-fns": "~2.24.0",
        "date-fns-timezone": "^0.1.4",
        "digiflazz": "^1.1.1",
        "dotenv": "~10.0.0",
        "express": "~4.17.1",
        "express-http-context": "~1.2.4",
        "express-openapi-validator": "~4.13.1",
        "firebase-admin": "^10.0.0",
        "google-auth-library": "^7.9.2",
        "helmet": "~4.6.0",
        "jsonwebtoken": "~8.5.1",
        "lodash": "^4.17.21",
        "md5": "^2.3.0",
        "module-alias": "~2.2.2",
        "multer": "~1.4.3",
        "node-cron": "^3.0.2",
        "nodemailer": "^6.9.1",
        "passport": "^0.4.1",
        "pdf-creator-node": "^2.2.4",
        "pg": "~8.7.1",
        "querystring": "~0.2.1",
        "reflect-metadata": "~0.1.13",
        "source-map-support": "~0.5.19",
        "swagger-parser": "~10.0.3",
        "typeorm": "~0.2.37",
        "underscore": "^1.13.1",
        "xendit-node": "~1.16.1",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/date-fns": "~2.6.0",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/lodash": "^4.14.191",
        "@types/md5": "^2.3.2",
        "@types/module-alias": "~2.0.1",
        "@types/node": "~16.7.1",
        "@types/node-cron": "^3.0.7",
        "@types/nodemailer": "^6.4.7",
        "@types/pg": "~8.6.1",
        "@types/underscore": "^1.11.4",
        "@typescript-eslint/eslint-plugin": "~4.29.2",
        "cross-env": "~7.0.3",
        "eslint": "~7.32.0",
        "eslint-config-airbnb-typescript": "~12.3.1",
        "eslint-config-prettier": "~8.3.0",
        "eslint-import-resolver-alias": "~1.1.2",
        "eslint-plugin-filenames": "~1.3.2",
        "eslint-plugin-import": "~2.24.0",
        "eslint-plugin-jest": "~24.4.0",
        "eslint-plugin-prettier": "~3.4.0",
        "husky": "~7.0.1",
        "jest": "~27.0.6",
        "jest-extended": "~0.11.5",
        "lint-staged": "~11.1.2",
        "prettier": "~2.3.2",
        "supertest": "~6.1.5",
        "ts-jest": "~27.0.5",
        "ts-node": "~10.2.0",
        "ts-node-dev": "~1.1.8",
        "tsc-watch": "~4.4.0",
        "tslib": "~2.3.1",
        "typescript": "~4.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,json}": [
            "npm run format"
        ],
        "*.{ts,js}": [
            "eslint"
        ]
    },
    "author": "",
    "license": "UNLICENSED",
    "private": true
}
